@page "/"
@namespace ResultsViewer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ResultsViewer</title>
    <base href="/results-viewer/" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="ResultsViewer.styles.css" rel="stylesheet" />

    <link href="_content/AntDesign/css/ant-design-blazor.css" rel="stylesheet" />
    <script src="_content/AntDesign/js/ant-design-blazor.js"></script>
    <link href="_content/BlazorTextDiff/css/BlazorDiff.css" rel="stylesheet" />
    <script src="_content/BlazorTextDiff/js/BlazorTextDiff.js"></script>
</head>
<body>
    <component type="typeof(App)" render-mode="Server" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    <script>
        
        window.saveUrlAsFile = (filename, url) => {
            console.log(url)
            var link = document.createElement('a');
            link.download = filename;
            link.href = url;
            document.body.appendChild(link); // Needed for Firefox
            link.click();
            document.body.removeChild(link);
        }
        window.saveBlobAsFile = (filename, blob) => {
            saveUrlAsFile(filename, URL.createObjectURL(blob));
        }
        window.saveAsFile = (filename, bytesBase64) => {
            saveUrlAsFile(filename, "data:application/octet-stream;base64," + bytesBase64);
        }
    </script>
    <script src="~/lib/jszip/jszip.min.js"></script>
    <script src="~/js/ZipModule.js"></script>
    <script src="_framework/blazor.server.js"></script>
</body>
</html>
