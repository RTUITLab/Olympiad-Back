<Tooltip Title="@Render"><Icon Type="@IconType.Outline.InfoCircle" /></Tooltip>

@code {
    [Parameter]
    public string? Text { get; set; }
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private OneOf.OneOf<string, RenderFragment, MarkupString> Render => 
        !string.IsNullOrEmpty(Text) ? Text :
        ChildContent != null ? ChildContent: ""
    ;
}
